#!/bin/bash
#
# Print nyan cat.
#
# - Print a cat:
#
# `nyan`
#
# ---
# Author: Nick Plekhanov, https://nikkhan.com/
# License: MIT
# https://github.com/nicksp/dotfiles

RED="$(tput setaf 1)"
GREEN="$(tput setaf 2)"
YELLOW="$(tput setaf 3)"
CYAN="$(tput setaf 6)"
WHITE="$(tput setaf 7)"
BOLD="$(tput bold)"
RESET="$(tput sgr0)"

echo
echo -en $RED'-_-_-_-_-_-_-_-'
echo -e $RESET$BOLD$WHITE'  ／l、'$RESET
echo -en $YELLOW$WHIT'_-_-_-_-_-_-_-'
echo -e $RESET$BOLD$WHITE'（ﾟ､ ｡ ７'$RESET
echo -en $GREEN'-_-_-_-_-_-_-_-'
echo -e $RESET$BOLD$WHITE'l  ~ ヽ'$RESET
echo -en $CYAN'-_-_-_-_-_-_-_-'
echo -e $RESET$BOLD$WHITE'じしf_,)ノ'$RESET
echo
